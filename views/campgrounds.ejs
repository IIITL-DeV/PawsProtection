<%- include ('partials/header.ejs'); -%>
<div class="demo-wrap">
    <div class="demo-content">

    <div class="container" style="margin-top : 3%;">
        <div class="jumbotron">
            <div style="color:white;">
                <h1>Foodie Land</h1>
                <p>Good Food is the Foundation of Geniune Happiness!</p>
            </div>
           
            <div class ="btn btn-warning"> <a href="campgrounds/new">Add a Delicious Item</a>   </div>
        </div>
    <div class="row">
        <% camps.forEach(function(image){ %>
        <div class="col-md-4 col-sm-6" style="margin-bottom:0.5%;">  
            
            <div class="card" style="width: 18rem; margin-top: 10%;">
                <img src="data:image/<%=image.img.contentType%>;base64,
                     <%=image.img.data.toString('base64')%>"  style="width:100%; height:200px">
                <div class="card-body">
                  <h5 class="card-title"><%=image.name%></h5>
                  <a href="/campgrounds/<%=image._id%>" class="btn btn-primary">More Info</a>
                </div>
              </div>
        </div> 

        <% }) %>
</div>
</div>
</div>
</div>


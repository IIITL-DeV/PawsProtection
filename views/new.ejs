<%- include ('partials/header2.ejs'); -%>



<div class="container mt-5">
    <div class="row">
      <div class="col"></div>
      <div class="col-sm-7 col-md-6 col-lg-5">
        <div class="card shadow border-0">
          <div class="card-body">
            <h1 class="text-center">Register a Complaint</h1>
    
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Title of Complaint</label>
                <input type="text" class="form-control" name="name" placeholder="Name"
                       value=""  required>
            </div>
            <div class="form-group">
                <label for="image">Upload Image</label>
                <input class="form-control" type="file" id="image"
                       name="image" value="" required>
            </div>
            <div class="form-group">
              <label for="name">Name of Abuser</label>
              <input type="text" class="form-control" name="abname" placeholder="Type Unknown if not known"
                     value=""  required>
          </div>
            <div class="form-group">
                <label for="desc">Incident Description</label>
                <textarea class="form-control" id="desc" name="indesc" value="" rows="5"
                          placeholder="Description" required>
                </textarea>
            </div>
            <div class="form-group">
              <label for="name">Contact No of Witness</label>
              <input type="text" class="form-control" name="wno" placeholder="123-456-6789"
                     value=""  required>
          </div>
            <div class="form-group">
              <label for="name">Contact No of Abuser</label>
              <input type="text" class="form-control" name="abno" placeholder="Type Unknown if not known"
                     value=""  required>
          </div>
          <div class="form-group">
            <label for="desc">Location of Abuse</label>
            <textarea class="form-control" id="desc" name="loc" value="" rows="5"
                      placeholder="Description" required>
            </textarea>
        </div>
          

            
            <div>
                <button type="submit" class="btn btn-danger btn-block">Register</button>
            </div>
            <div>
              <a href="/campgrounds">Go Back</a>
          </div>
        </form>
    </div>
          </div>
        </div>
        <div class="col"> </div>
      </div>
</div>
    

<%- include ('partials/footer.ejs'); -%>
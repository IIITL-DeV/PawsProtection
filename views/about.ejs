
<%- include ('partials/header2.ejs'); -%>
<!-- Preloader -->

<div class= "container"style="margin-top:4%;"  >
    <!-- Navigation -->
    
    

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href="#"><h2><%=image.title%></h2></a></li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            
            <div class="col-md-12 col-xs-12">
                <div class="white-box">
                    <form class="form-horizontal form-material">
                        <div class="form-group">
                            <label class="col-md-12"><b>Description</b></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="Some text here" value="<%=image.incidentDesc%>"
                                    class="form-control form-control-line"> </div>
                        </div>
                        <% if(currentUser && (currentUser._id.equals("617be0812ec852431c9d3ee5") || currentUser._id.equals(image.author.id))) {%>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12"><b></b>Name of abuser if known</label>
                            <div class="col-md-12">
                                <input type="text" placeholder="xyz" value="<%=image.abuserName%> "
                                    class="form-control form-control-line" name="example-email" id="example-email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-12"><b>Phone No of Abuser</b></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="123-456-6789" value = "<%=image.abuserNo%>"
                                    class="form-control form-control-line"> </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-12"><b>Phone No of witness</b></label>
                            <div class="col-md-12">
                                <input type="text" placeholder="123-456-6789" value = "<%=image.witnessNo%>"
                                    class="form-control form-control-line"> </div>
                        </div>
                        <%} %>
                        <div class="form-group">
                            <label for="example-address" class="col-md-12"><b>Location</b></label>
                            <div class="col-md-12">
                                <input type="address" placeholder="Something Something" value = "<%=image.location%>"
                                    class="form-control form-control-line" name="example-address" id="example-address">
                            </div>
                        </div>
                        <div class="form-group">
                           <div><label for="image"><b>Visual Proof</b></label>
                           </div> 
                            <img src="data:image/<%=image.img.contentType%>;base64,
                            <%=image.img.data.toString('base64')%>"  style="width:350px; height:350px">
                            
                        </div>

                        
                        
                        
                    </form>

                    <% if(currentUser && currentUser._id.equals("617be0812ec852431c9d3ee5")) {%>
                        <form style="display: inline;" action="/campgrounds/<%=image._id%>?_method=PUT" method="POST" style="display: inline;">
                            <button class="btn btn-success  btn-md">Change Status</button>
                            <br>
                        
                        <%} %>
                </div>
            </div>
        </div>
        
        <!-- </div> -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

<%- include ('partials/footer.ejs'); -%>
